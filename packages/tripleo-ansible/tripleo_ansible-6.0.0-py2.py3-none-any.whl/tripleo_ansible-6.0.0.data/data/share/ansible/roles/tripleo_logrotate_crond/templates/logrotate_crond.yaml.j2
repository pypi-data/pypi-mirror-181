image: {{ tripleo_logrotate_crond_image }}
net: none
pid: {{ tripleo_logrotate_crond_podman_pid }}
privileged: true
user: root
restart: always
healthcheck:
  test: '/usr/share/openstack-tripleo-common/healthcheck/cron'
volumes:
  {{ tripleo_container_standalone_common_volumes | default([]) + tripleo_logrotate_crond_volumes }}
environment:
  KOLLA_CONFIG_STRATEGY: COPY_ALWAYS
